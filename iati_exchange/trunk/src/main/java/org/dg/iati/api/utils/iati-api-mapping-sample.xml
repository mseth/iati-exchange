<?xml version="1.0" encoding="UTF-8"?>
<iati-api-mapping>
   <datasource type="mysql|postgres|csv|xml|json">
	   <username></username>
       <password></password>
       <url></url>
       <port></port>
   </datasource>
   <generated-datetime type="current|set">02-21-2011</generated-datetime>
   <iati-activity type="select">select id from amp_activity</iati-activity>
   <global-query type="select | file">select id, activity_title, activity_owner, iati-identifier from amp_activity where id=$parent</global-query>
   <mapping>
       <field ref="default-language">
           <content type="constant"  prefix="WB-GG-" >en</content>
       </field>
       <field ref="title">
           <content type="column">activity_title</content>
           <attribute type="constant" ref="lang">en</attribute>
           <field ref=""></field>
       </field>
       <field ref="other-identifier">
           <content type="column">activity_owner</content>
           <attribute type="constant" ref="owner-ref" prefix="WB-ER-12-">en</attribute>
           <attribute type="constant" ref="owner-name">en</attribute>
           <field ref=""></field>
       </field>
       <field ref="sector">
           <query type="select">select as.amp_sector_name as name, as.amp_sector_code as code, as.amp_sector_percentage as percentage,
               as.amp_sector_parent as scheme from amp_activity_sector as, amp_activity aa where aa.amp_activity_id=$parent
               and aa.amp_activity_id=as.activity_id
           </query>
           <content type="column">name</content>
           <attribute type="column" ref="code">code</attribute>
           <attribute type="column" ref="percentage">percentage</attribute>
           <attribute type="column" ref="vocabulary">scheme</attribute>
           <field ref=""></field>
       </field>
       <field ref="default-currency">
           <content type="constant"  prefix="WB-GG-">GBP</content>
           <field ref=""></field>
       </field>
       <field ref="last-updated-datetime">
           <content type="column"  prefix="WB-GG-">last_updated</content>
           <field ref=""></field>
       </field>
       <field ref="iati-identifier">
           <content type="column" prefix="WB-GG-">iati-identifier</content>
           <field ref=""></field>
       </field>
   </mapping>
</iati-api-mapping>